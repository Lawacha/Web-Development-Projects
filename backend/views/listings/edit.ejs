<% layout("/layouts/boilerplate") %>
<body>
    <br>
    
      <form action="http://localhost:8080/listings/<%= showList._id %>?_method=PUT"  method="post">
      <div class="row">
        <div class="col-8 offset-2">
            <h3>Edit list</h3>
        <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" class="form-control" id="title" name="title" value="<%=showList.title%>">
        </div>

        <div class="mb-3">
       <label for="description" class="form-label">Description:</label>
        <textarea name="description" class="form-control" ><%=showList.description%></textarea>
        </div>
         
         <div class="mb-3">
       <label for="image" class="form-label">Image:</label>
        <input type="text" id="image" class="form-control" name="image" value="<%=showList.image.url%>">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                
           <label for="price" class="form-label">Price:</label>
        <input type="number" id="price" class="form-control" name="price" value="<%=showList.price%>">
      
            </div>
       <div class="mb-3 col-md-8">
      <label for="country" class="form-label">Country:</label>
        <input type="text" id="country" class="form-control"  name="country" value="<%=showList.country%>">
       </div>
        </div>
        <div class="mb-2">
       <label for="location" class="form-label">Location:</label>
        <input type="text" class="form-control" name="location" value="<%=showList.location%>">
        </div>
        <br>
        <button class="btn edit-btn btn-dark">Edit</button>
        </div>
      </div>
        <br><br><br>
    </form>
</body>
