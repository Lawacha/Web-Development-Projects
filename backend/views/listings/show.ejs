<% layout("/layouts/boilerplate.ejs") %>

  <body>
    <div class="row mt-3">
      <div class="col-8 offset-2">
        <h3>Show list</h3>
      </div>
        <div class="card col-6 offset-2 ">
          <img  src="<%= showList.image.url %>" class="card-img-top show-img" alt="...">
          <div class="card-body">
            <p class="card-text">
              <b style="font-size: 1.2rem;">
                <%= showList.title %>
              </b><br>
              <%= showList.description %> <br>
                &#x20A8; <%= showList.price.toLocaleString("en-IN") %> <br>
                  <%= showList.location %> <br>
                    <%= showList.country %>
            </p>
          </div>
        </div>
        <div class="buttons mb-4 col-8 offset-2">
          <a class="btn edit-btn btn-dark" href="/listings/<%= showList._id %>/edit">Edit</a>
        <form action="http://localhost:8080/listings/<%=showList._id%>?_method=DELETE" method="POST">
          <button class="btn btn-dark">Delete</button>
        </form>
       
       
      </div>

    </div>

  </body>